<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="30dp"
                android:id="@+id/btn_admin"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_redd_background"
                android:textColor="@color/white"
                android:text="[관리자] 회원 가입 계정 정보"/>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_admin"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_black_background"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

        <LinearLayout
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/btn_black_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:paddingVertical="5dp"
                            android:text="잔여 포인트 : "
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tv_point"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:textSize="18dp"
                            android:text="0 P"
                            android:gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="22dp"
                        android:text="문의 전화 : 02-546-7113" />
                </LinearLayout>

                <Button
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/btn_upload"
                    android:text="연락처 업로드하기"/>

                <Spinner
                    android:id="@+id/spinnerMenu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_black_background"
                    android:padding="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:paddingVertical="10dp"
                    android:background="@drawable/btn_black_background"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</layout>