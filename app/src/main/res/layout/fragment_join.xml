<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".JoinFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:textColor="@color/blue"
        android:layout_marginBottom="30dp"
        android:text="SPICON" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="회원가입 페이지입니다."
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/et_id"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_black_background"
        android:textColor="@color/black"
        android:gravity="center"
        android:singleLine="true"
        android:hint="ID는 전화번호 ex)01012341234"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_pw"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_black_background"
        android:textColor="@color/black"
        android:gravity="center"
        android:hint="PW : 비밀번호"
        android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_redd_background"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="회원가입"
        android:layout_marginBottom="10dp"/>


</LinearLayout>
</layout>